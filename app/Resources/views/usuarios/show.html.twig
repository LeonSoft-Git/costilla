    {% extends '@Admin/base.html.twig' %}
{% block navegacion %}
{{ include('@Admin/partials/navegacion.html.twig',{'menu':'CI','submenu':'Usuarios'}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .ver{
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
<script src="{{ asset('admin/js/jasny-bootstrap.js') }}"></script>
    <script>
        function ocultar() {
            $('#password').addClass('hidden');
            $('.mostrar').removeClass('mostrar');
            $('.ver').html('Ver Password <i class="fa fa-eye"></i>')
        }
        $(document).ready(function () {
            $('.ver').click(function () {
                if($(this).hasClass('mostrar')){
                    ocultar();
                }else{
                    $('#password').removeClass('hidden');
                    $(this).html('Ocultar Password <i class="fa fa-eye-slash"></i>');
                    $(this).addClass('mostrar');
                    setTimeout(ocultar,10000);
                }
            });
        });
    </script>
{% endblock %}

    {% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="white-box">
                <h3 class="box-title m-b-0">Ver Registro</h3>                <form class="form-horizontal" role="form">                        <div class="form-group">
                            <label class="col-sm-2 control-label">Id</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">                                        {{ usuario.id }}                                </p>
                            </div>
                        </div>                        <div class="form-group">
                            <label class="col-sm-2 control-label">Nombre</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">                                        {{ usuario.nombre }}                                </p>
                            </div>
                        </div>                        <div class="form-group">
                            <label class="col-sm-2 control-label">Apellido</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">                                        {{ usuario.apellido }}                                </p>
                            </div>
                        </div>                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">                                        {{ usuario.email }}                                </p>
                            </div>
                        </div>                        <div class="form-group">
                            <label class="col-sm-2 control-label">Username</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">                                        {{ usuario.user }}                                </p>
                            </div>
                        </div>                        <div class="form-group">
                            <label class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-10">
                                <p class="form-control-static"> <strong id="password" class="hidden text-center">{{ usuario.password }}</strong>  <a class="ver" title="Se mostrará por 10 segundos">Ver Password <i class="fa fa-eye"></i></a>  </p>
                            </div>
                        </div>                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tipo</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">                                        {{ usuario.tipo|tipo }}                                </p>
                            </div>
                        </div>                        <div class="form-group">
                            <label class="col-sm-2 control-label">Activo</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">                   {{ usuario.activo|sino }} </p>
                            </div>
                        </div>                        <div class="form-group">
                            <label class="col-sm-2 control-label">Válido</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">                   {{ usuario.valido|sino }} </p>
                            </div>
                        </div>                        <div class="form-group">
                            <label class="col-sm-2 control-label">Creado</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">                                        {% if usuario.createdat %}{{ usuario.createdat|date('Y-m-d H:i:s') }}{% endif %}                                </p>
                            </div>
                        </div>                        <div class="form-group">
                            <label class="col-sm-2 control-label">Actualizado</label>
                            <div class="col-sm-10">
                                <p class="form-control-static">                                        {% if usuario.updatedat %}{{ usuario.updatedat|date('Y-m-d H:i:s') }}{% endif %}                                </p>
                            </div>
                        </div>                    <div class="form-group m-b-0">
                        <div class="col-sm-12">
                                                                    <a class="btn btn-inverse waves-effect waves-light m-t-10" style="float:left; margin:5px;" href="{{ path('usuarios_index') }}">Regresar</a>            <a class="btn btn-info waves-effect waves-light m-t-10" style="float:left;  margin:5px;"  href="{{ path('usuarios_edit', { 'id': usuario.id }) }}">Editar</a></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {% endblock %}
